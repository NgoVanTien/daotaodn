<tr>
  <td><%= bac_dao_tao.kyhieu %></td>
  <td><%= bac_dao_tao.tenbacdaotao %></td>
  <td class="tac-vu">
    <%= link_to admin_bac_dao_tao_path(bac_dao_tao), class: "button-show" do %>
          <span class="button-inner">
            <button class="btn button button-show-small">
              <span class="text">Chi Tiết</span>
            </button>
          </span>
    <% end %>
    <%= link_to edit_admin_bac_dao_tao_path(bac_dao_tao), class: "button-edit" do %>
          <span class="button-inner">
            <button class="btn button button-edit-small">
              <span class="text">Chỉnh Sửa</span>
            </button>
          </span>
    <% end %>
    <%= link_to admin_bac_dao_tao_path(bac_dao_tao),method: :delete,
      data: {confirm: "Bạn chắc chắn muốn xóa"}, class: "button-delete" do %>
          <span class="button-inner">
            <button class="btn button button-delete-small">
              <span class="text">Xóa</span>
            </button>
          </span>
    <% end %>
  </td>
</tr>
