<%= form_for [:admin, bacdaotao], html: {class: "form-horizontal"} do |f| %>
  <%= render "shared/error_messages", object: f.object %>
  <div class="box-body">
    <div class="form-group">
      <label for="inputEmail3" class="col-sm-2 control-label">Tên Bậc Đào Tạo</label>
      <div class="col-sm-10">
        <%= f.text_field :kyhieu, class: "form-control", placeholder: "Nhập Ký Hiệu" %>
      </div>
    </div>

    <div class="form-group">
      <label for="inputEmail3" class="col-sm-2 control-label">Tên Bậc Đào Tạo</label>
      <div class="col-sm-10">
        <%= f.text_field :tenbacdaotao, class: "form-control", placeholder: "Nhập Tên Bậc Đào Tạo" %>
      </div>
    </div>
  </div>
  <div class="box-footer">
    <%= link_to "Trở Về", :back, class: "btn btn-default btn-warning" %>
    <% if bacdaotao.persisted?%>
      <%= f.submit "Chỉnh Sửa", class: "btn btn-info pull-right" %>
    <% else %>
      <%= f.submit "Tạo Mới", class: "btn btn-info pull-right" %>
    <% end %>
  </div>
<% end %>
