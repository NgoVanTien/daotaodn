<tr>
  <td><%= chuong_trinh_dao_tao.mactdt %></td>
  <td><%= chuong_trinh_dao_tao.tenctdt %></td>
  <td><%= chuong_trinh_dao_tao.sotinchi %></td>
  <td><%= chuong_trinh_dao_tao.bac_dao_tao.tenbacdaotao %></td>
  <td><%= chuong_trinh_dao_tao.khoa_hoc.tenkhoahoc %></td>
  <td><%= chuong_trinh_dao_tao.khoa.tenkhoa %></td>

  <td class="tac-vu">
    <%= link_to admin_chuong_trinh_dao_tao_chi_tiet_dao_taos_path(chuong_trinh_dao_tao), class: "button-show" do %>
          <span class="button-inner">
            <button class="btn button button-show-small">
              <span class="text">Chi Tiết CTDT</span>
            </button>
          </span>
    <% end %>
    <%= link_to admin_chuong_trinh_dao_tao_path(chuong_trinh_dao_tao), class: "button-show" do %>
          <span class="button-inner">
            <button class="btn button button-show-small">
              <span class="text">Thông Tin</span>
            </button>
          </span>
    <% end %>
    <%= link_to edit_admin_chuong_trinh_dao_tao_path(chuong_trinh_dao_tao), class: "button-edit" do %>
          <span class="button-inner">
            <button class="btn button button-edit-small">
              <span class="text">Chỉnh Sửa</span>
            </button>
          </span>
    <% end %>
    <%= link_to admin_chuong_trinh_dao_tao_path(chuong_trinh_dao_tao),method: :delete,
      data: {confirm: "Bạn chắc chắn muốn xóa"}, class: "button-delete" do %>
          <span class="button-inner">
            <button class="btn button button-delete-small">
              <span class="text">Xóa</span>
            </button>
          </span>
    <% end %>
  </td>
</tr>
