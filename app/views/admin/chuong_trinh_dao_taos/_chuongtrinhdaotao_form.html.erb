<%= form_for [:admin, chuongtrinhdaotao], html: {class: "form-horizontal"} do |f| %>
  <%= render "shared/error_messages", object: f.object %>
  <div class="box-body">
    <div class="form-group">
      <label for="inputEmail3" class="col-sm-2 control-label">Mã Chương Trình Đào Tạo</label>
      <div class="col-sm-10">
        <%= f.text_field :mactdt, class: "form-control", placeholder: "Nhập Mã Chương Trình Đào Tạo" %>
      </div>
    </div>

    <div class="form-group">
      <label for="inputEmail3" class="col-sm-2 control-label">Tên Chương Trình Đào Tạo</label>
      <div class="col-sm-10">
        <%= f.text_field :tenctdt, class: "form-control", placeholder: "Nhập Tên Chương Trình Đào Tạo" %>
      </div>
    </div>

    <div class="form-group">
      <label for="inputEmail3" class="col-sm-2 control-label">Số Tín Chỉ Tối Đa</label>
      <div class="col-sm-10">
        <%= f.number_field :sotinchi, class: "form-control", placeholder: "Nhập Số Tín Chỉ Tối Đa" %>
      </div>
    </div>

    <div class="form-group">
      <label for="inputEmail3" class="col-sm-2 control-label">Bậc Đào Tạo</label>
      <div class="col-sm-8">
        <%= f.select :bac_dao_tao_id, @bacdaotaos.collect {|lmh| [lmh.tenbacdaotao, lmh.id]},
        {include_blank: "Chọn bậc đào tạo"}, {class: "form-control"} %>
      </div>
      <div class="col-md-2">
      </div>
    </div>

    <div class="form-group">
      <label for="inputEmail3" class="col-sm-2 control-label">Khóa Học</label>
      <div class="col-sm-8">
        <%= f.select :khoa_hoc_id, @khoahocs.collect {|lmh| [lmh.tenkhoahoc, lmh.id]},
        {include_blank: "Chọn khóa học"}, {class: "form-control"} %>
      </div>
      <div class="col-md-2">
      </div>
    </div>

    <div class="form-group">
      <label for="inputEmail3" class="col-sm-2 control-label">Khoa</label>
      <div class="col-sm-8">
        <%= f.select :khoa_id, @khoas.collect {|lmh| [lmh.tenkhoa, lmh.id]},
        {include_blank: "Chọn khoa"}, {class: "form-control"} %>
      </div>
      <div class="col-md-2">
      </div>
    </div>

  </div>
  <div class="box-footer">
    <%= link_to "Trở Về", :back, class: "btn btn-default btn-warning" %>
    <% if chuongtrinhdaotao.persisted?%>
      <%= f.submit "Chỉnh Sửa", class: "btn btn-info pull-right load-alert" %>
    <% else %>
      <%= f.submit "Tạo Mới", class: "btn btn-info pull-right load-alert" %>
    <% end %>
  </div>
<% end %>
