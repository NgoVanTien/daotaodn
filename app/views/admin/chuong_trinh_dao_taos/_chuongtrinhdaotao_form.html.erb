<%= form_for [:admin, monhoc], html: {class: "form-horizontal"} do |f| %>
  <%= render "shared/error_messages", object: f.object %>
  <div class="box-body">
    <div class="form-group">
      <label for="inputEmail3" class="col-sm-2 control-label">Tên Loại Môn Học</label>
      <div class="col-sm-10">
        <%= f.text_field :ten, class: "form-control", placeholder: "Nhập Tên Loại Môn Học" %>
      </div>
    </div>
  </div>
  <div class="box-footer">
    <%= link_to "Trở Về", :back, class: "btn btn-default btn-warning" %>
    <% if monhoc.persisted?%>
      <%= f.submit "Chỉnh Sửa", class: "btn btn-info pull-right" %>
    <% else %>
      <%= f.submit "Tạo Mới", class: "btn btn-info pull-right" %>
    <% end %>
  </div>
<% end %>
