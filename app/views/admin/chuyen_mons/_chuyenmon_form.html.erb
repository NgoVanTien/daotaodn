<%= form_for [:admin, chuyenmon], html: {class: "form-horizontal"} do |f| %>
  <%= render "shared/error_messages", object: f.object %>
  <div class="box-body">

    <div class="form-group">
      <label for="inputEmail3" class="col-sm-2 control-label">Chuyên Môn</label>
      <div class="col-sm-8">
        <%= f.collection_select :chuyenmon, chuyenmon.decorate.chuyenmon_display, :last, :first,
          {include_blank: "Chọn chuyên môn"}, {class: "form-control"} %>
      </div>
      <div class="col-md-2">
      </div>
    </div>

    <div class="form-group">
      <label for="inputEmail3" class="col-sm-2 control-label">Tên Môn Học</label>
      <div class="col-sm-8">
        <%= f.select :mon_hoc_id, @monhocs.collect {|mh| [mh.tenmonhoc, mh.id]},
        {include_blank: "Chọn môn học"}, {class: "form-control"} %>
      </div>
      <div class="col-md-2">
      </div>
    </div>

    <div class="form-group">
      <label for="inputEmail3" class="col-sm-2 control-label">Tên Giáo Viên</label>
      <div class="col-sm-8">
        <%= f.select :giao_vien_id, @giaoviens.collect {|gv| [gv.tengiaovien, gv.id]},
        {include_blank: "Chọn giáo viên"}, {class: "form-control"} %>
      </div>
      <div class="col-md-2">
      </div>
    </div>

  </div>
  <div class="box-footer">
    <%= link_to "Trở Về", admin_chuyen_mons_path, class: "btn btn-default btn-warning" %>
    <% if chuyenmon.persisted?%>
      <%= f.submit "Chỉnh Sửa", class: "btn btn-info pull-right load-alert" %>
    <% else %>
      <%= f.submit "Tạo Mới", class: "btn btn-info pull-right load-alert" %>
    <% end %>
  </div>
<% end %>
