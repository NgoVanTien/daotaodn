<section class="content-header menu-header-button">
  <%= link_to new_admin_chuyen_mon_path, class: "btn icon-btn btn-danger" do %>
    <span class="glyphicon btn-glyphicon glyphicon-plus img-circle text-danger"></span>
    Thêm Mới
  <% end %>

  <%= link_to admin_root_path, class: "btn icon-btn btn-warning" do %>
    <span class="glyphicon btn-glyphicon glyphicon-circle-arrow-left img-circle text-warning"></span>
    Trở Về
  <% end %>

  <%= link_to admin_root_path, class: "btn icon-btn btn-primary" do %>
    <span class="glyphicon btn-glyphicon glyphicon-share img-circle text-primary"></span>
    Trang Quản Lý
  <% end %>

</section>


<section class="content">
  <div class="row">
    <div class="col-md-12">
      <div class="box box-info">
        <div class="box-header with-border">
          <h3 class="box-title">Chuyên Môn</h3>
          <div class="box-tools pull-right">
            <button type="button" class="btn btn-box-tool btn-filter">
              <i class="fa fa-search"></i>
            </button>
          </div>
        </div>
        <div class="box-body table-responsive no-padding min-height-600">
          <%= render "chuyenmon_form_search", search: @search, form: @form %>
          <div class="notices_result">
            <% if @chuyenmons.any? %>
              <table class="table table-hover table-striped">
                <thead class="thead-inverse">
                  <th><%= sort_link @search, :chuyenmon, "Chuyên Môn" %></th>
                  <th><%= sort_link @search, :mon_hoc_id, "Môn Học" %></th>
                  <th><%= sort_link @search, :giao_vien_id, "Giáo Viên" %></th>
                  <th class="tac-vu">Tác Vụ</th>
                </thead>
                <tbody>
                  <%= render @chuyenmons %>
                </tbody>
              </table>
              <div class="pagination_center">
                <%= paginate @chuyenmons %>
              </div>
            <% else %>
              <h3 class="text-center">Không có chuyên môn nào.</h3>
              <div class="col-xs-12 text-center margin-bottom-30">
                <%= link_to "Trở lại", admin_chuyen_mons_path, class: "btn btn-default bg-red" %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<%= content_for :specific_page_js do %>
  <script type="text/javascript">
    <%= render "chuyenmon_form_search.js" %>
  </script>
<% end %>
