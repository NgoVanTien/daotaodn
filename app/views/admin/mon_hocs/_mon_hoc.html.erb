<tr>
  <td><%= mon_hoc.mamonhoc %></td>
  <td><%= mon_hoc.tenmonhoc %></td>
  <td><%= mon_hoc.hesotinchi %></td>
  <td><%= mon_hoc.loai_mon_hoc.ten %></td>
  <td><%= mon_hoc.khoa.tenkhoa %></td>
  <td class="tac-vu">
    <%= link_to admin_mon_hoc_path(mon_hoc), class: "button-show" do %>
          <span class="button-inner">
            <button class="btn button button-show-small">
              <span class="text">Chi Tiết</span>
            </button>
          </span>
    <% end %>
    <%= link_to edit_admin_mon_hoc_path(mon_hoc), class: "button-edit" do %>
          <span class="button-inner">
            <button class="btn button button-edit-small">
              <span class="text">Chỉnh Sửa</span>
            </button>
          </span>
    <% end %>
    <%= link_to admin_mon_hoc_path(mon_hoc),method: :delete,
      data: {confirm: "Bạn chắc chắn muốn xóa"}, class: "button-delete" do %>
          <span class="button-inner">
            <button class="btn button button-delete-small">
              <span class="text">Xóa</span>
            </button>
          </span>
    <% end %>
  </td>
</tr>
