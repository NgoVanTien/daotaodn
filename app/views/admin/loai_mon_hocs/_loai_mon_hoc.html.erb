<tr>
  <td><%= loai_mon_hoc.id %></td>
  <td><%= loai_mon_hoc.ten%></td>
  <td class="tac-vu">
    <%= link_to admin_loai_mon_hoc_path(loai_mon_hoc), class: "button-show" do %>
          <span class="button-inner">
            <button class="btn button button-show-small">
              <span class="text">Chi Tiết</span>
            </button>
          </span>
    <% end %>
    <%= link_to edit_admin_loai_mon_hoc_path(loai_mon_hoc), class: "button-edit" do %>
          <span class="button-inner">
            <button class="btn button button-edit-small">
              <span class="text">Chỉnh Sửa</span>
            </button>
          </span>
    <% end %>
    <%= link_to admin_loai_mon_hoc_path(loai_mon_hoc),method: :delete,
      data: {confirm: "Bạn chắc chắn muốn xóa"}, class: "button-delete" do %>
          <span class="button-inner">
            <button class="btn button button-delete-small">
              <span class="text">Xóa</span>
            </button>
          </span>
    <% end %>
  </td>
</tr>
