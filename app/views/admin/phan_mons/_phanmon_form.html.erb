<%= form_for [:admin, monhoc], html: {class: "form-horizontal"} do |f| %>
  <%= render "shared/error_messages", object: f.object %>
  <div class="box-body">
    <div class="form-group">
      <label for="inputEmail3" class="col-sm-2 control-label">Mã Môn Học</label>
      <div class="col-sm-8">
        <%= f.text_field :mamonhoc, class: "form-control", placeholder: "Nhập Mã Môn Học" %>
      </div>
      <div class="col-md-2">
      </div>
    </div>

    <div class="form-group">
      <label for="inputEmail3" class="col-sm-2 control-label">Tên Môn Học</label>
      <div class="col-sm-8">
        <%= f.text_field :tenmonhoc, class: "form-control", placeholder: "Nhập Tên Môn Học" %>
      </div>
      <div class="col-md-2">
      </div>
    </div>

    <div class="form-group">
      <label for="inputEmail3" class="col-sm-2 control-label">Cách Viết Tắt</label>
      <div class="col-sm-8">
        <%= f.text_field :cachviettat, class: "form-control", placeholder: "Nhập Tên Viết Tắt" %>
      </div>
      <div class="col-md-2">
      </div>
    </div>

    <div class="form-group">
      <label for="inputEmail3" class="col-sm-2 control-label">Hệ Số Tín Chỉ</label>
      <div class="col-sm-8">
        <%= f.collection_select :hesotinchi, monhoc.decorate.hesotinchi_display, :last, :first,
          {include_blank: "Chọn hệ số tín chỉ"}, {class: "form-control"} %>
      </div>
      <div class="col-md-2">
      </div>
    </div>

    <div class="form-group">
      <label for="inputEmail3" class="col-sm-2 control-label">Tên Loại Môn Học</label>
      <div class="col-sm-8">
        <%= f.select :loai_mon_hoc_id, @loaimonhocs.collect {|lmh| [lmh.ten, lmh.id]},
        {include_blank: "Chọn loại môn học"}, {class: "form-control"} %>
      </div>
      <div class="col-md-2">
      </div>
    </div>

    <div class="form-group">
      <label for="inputEmail3" class="col-sm-2 control-label">Tên Loại Môn Học</label>
      <div class="col-sm-8">
        <%= f.select :khoa_id, @khoas.collect {|lmh| [lmh.tenkhoa, lmh.id]},
        {include_blank: "Chọn khoa"}, {class: "form-control"} %>
      </div>
      <div class="col-md-2">
      </div>
    </div>

  </div>
  <div class="box-footer">
    <%= link_to "Trở Về", admin_mon_hocs_path, class: "btn btn-default btn-warning" %>
    <% if monhoc.persisted?%>
      <%= f.submit "Chỉnh Sửa", class: "btn btn-info pull-right load-alert" %>
    <% else %>
      <%= f.submit "Tạo Mới", class: "btn btn-info pull-right load-alert" %>
    <% end %>
  </div>
<% end %>
