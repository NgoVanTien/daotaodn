<tr>
  <td><%= sinh_vien.tensinhvien %></td>
  <td><%= sinh_vien.namsinh %></td>
  <td><%= sinh_vien.lop.tenlop %></td>
  <td class="tac-vu">
    <%= link_to admin_sinh_vien_path(sinh_vien), class: "button-show" do %>
          <span class="button-inner">
            <button class="btn button button-show-small">
              <span class="text">Chi Tiết</span>
            </button>
          </span>
    <% end %>
    <%= link_to edit_admin_sinh_vien_path(sinh_vien), class: "button-edit" do %>
          <span class="button-inner">
            <button class="btn button button-edit-small">
              <span class="text">Chỉnh Sửa</span>
            </button>
          </span>
    <% end %>
    <%= link_to admin_sinh_vien_path(sinh_vien),method: :delete,
      data: {confirm: "Bạn chắc chắn muốn xóa"}, class: "button-delete" do %>
          <span class="button-inner">
            <button class="btn button button-delete-small">
              <span class="text">Xóa</span>
            </button>
          </span>
    <% end %>
  </td>
</tr>
