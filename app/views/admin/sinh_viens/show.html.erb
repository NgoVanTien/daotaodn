<section class="content-header menu-header-button">
  <%= link_to new_admin_sinh_vien_path, class: "btn icon-btn btn-danger" do %>
    <span class="glyphicon btn-glyphicon glyphicon-plus img-circle text-danger"></span>
    Thêm Mới
  <% end %>

  <%= link_to admin_root_path, class: "btn icon-btn btn-warning" do %>
    <span class="glyphicon btn-glyphicon glyphicon-circle-arrow-left img-circle text-warning"></span>
    Trở Về
  <% end %>

  <%= link_to admin_root_path, class: "btn icon-btn btn-primary" do %>
    <span class="glyphicon btn-glyphicon glyphicon-share img-circle text-primary"></span>
    Trang Quản Lý
  <% end %>
</section>

<section class="content">
  <div class="row">
    <div class="col-xs-12">
      <div class="box box-default box-solid">
        <div class="box-header width-border">
          <h3 class="box-title">Chi Tiết Sinh Viên</h3>
          <div class="box-tools pull-right"></div>
        </div>
        <div class="box-body body-notice-box">
          <div class="col-md-12">
            <div class="form-group">
              <label for="inputEmail3" class="col-sm-2 control-label">Tên Sinh Viên :</label>
              <div class="col-sm-10">
                <h2><%= @sinhvien.tensinhvien %></h2>
              </div>
            </div>
          </div>

          <div class="col-md-12">
            <div class="form-group">
              <label for="inputEmail3" class="col-sm-2 control-label">Năm Sinh :</label>
              <div class="col-sm-10">
                <h2><%= @sinhvien.namsinh %></h2>
              </div>
            </div>
          </div>

          <div class="col-md-12">
            <div class="form-group">
              <label for="inputEmail3" class="col-sm-2 control-label">lop :</label>
              <div class="col-sm-10">
                <h2><%= @sinhvien.lop.tenlop %></h2>
              </div>
            </div>
          </div>

        </div>
        <div class="box-footer">
          <div class="col-md-12">
            <%= link_to t(".back"), admin_sinh_viens_path, class: "btn btn-info pull-right" %>
          </div>
        </div>
      </div>
    </div>
    <div class="col-xs-12 text-center"></div>
  </div>
</section>
