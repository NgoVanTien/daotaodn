  <header class="main-header">
    <!-- Logo -->
    <a href="index2.html" class="logo">
      <!-- mini logo for sidebar mini 50x50 pixels -->
      <span class="logo-mini"><b>DA</b>NA</span>
      <!-- logo for regular state and mobile devices -->
      <span class="logo-lg"><b>DANA</b>VTC</span>
    </a>
    <!-- Header Navbar: style can be found in header.less -->
    <nav class="navbar navbar-static-top">
      <!-- Sidebar toggle button-->
      <a href="#" class="sidebar-toggle" data-toggle="offcanvas" role="button">
        <span class="sr-only">Toggle navigation</span>
      </a>

      <div class="navbar-custom-menu">
        <ul class="nav navbar-nav">
          <!-- Messages: style can be found in dropdown.less-->
          <!-- User Account: style can be found in dropdown.less -->
          <li class="dropdown user user-menu">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <%= image_tag "admin/admin.jpg", class: "user-image", alt: "User Image" %>
              <span class="hidden-xs"><%= current_tai_khoan.name %></span>
            </a>
            <ul class="dropdown-menu">
              <!-- User image -->
              <li class="user-header">
                <%= image_tag "admin/admin.jpg", class: "img-circle", alt: "User Image"%>
                <p>
                  <%= current_tai_khoan.email %>
                  <small><%= current_tai_khoan.name %></small>
                </p>
              </li>

              <!-- Menu Footer-->
              <li class="user-footer">
                <div class="pull-left">
                  <%= link_to "Thông Tin Người Dùng", edit_tai_khoan_password_path(current_tai_khoan),
                    class: "btn btn-default btn-flat" %>
                </div>
                <div class="pull-right">
                  <%= link_to "Đăng Xuất", destroy_tai_khoan_session_path,
                    method: :delete, class: "btn btn-default btn-flat" %>
                </div>
              </li>
            </ul>
          </li>
          <!-- Control Sidebar Toggle Button -->
          <li>
            <a href="#" data-toggle="control-sidebar"><i class="fa fa-gears"></i></a>
          </li>
        </ul>
      </div>
    </nav>
  </header>
