<% if params[:item] == "1" %>
  $(".ten_lop").html("<%= j render 'lop_search', lops: @lops %>");
  $(".table_show_sinhvien").html("<%= j render 'table_sinhvien', sinhviens: @sinhviens %>");

  $("#ten_lop").on("change", function(){
    let id_lop = $("#ten_lop").val();
    submit_search_form({id_lop: id_lop});
  });

  function submit_search_form(data) {
    $.get("/daotao/sinh_viens", data, null, "script");
    return false;
  }
<% else %>
  $(".table_show_sinhvien").html("<%= j render 'table_sinhvien', sinhviens: @sinhviens %>");
<% end %>
